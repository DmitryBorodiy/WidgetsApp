<Application
    x:Class="BetterWidgets.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:r="clr-namespace:BetterWidgets.Resources"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    ShutdownMode="OnExplicitShutdown">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ui:ThemesDictionary Theme="Light" />
                <ui:ControlsDictionary />

                <ResourceDictionary Source="/Styles/Fonts.xaml" />
                <ResourceDictionary Source="/Styles/Values.xaml" />
                <ResourceDictionary Source="/Styles/Colors.xaml" />
                <ResourceDictionary Source="/Styles/Storyboards.xaml" />
                <ResourceDictionary Source="/Styles/Templates.xaml" />
                <ResourceDictionary Source="/Styles/DataTemplates.xaml" />
                <ResourceDictionary Source="/GlobalResources/DataContexts.xaml" />
                <ResourceDictionary Source="/Styles/Controls.xaml" />
                <ResourceDictionary Source="/Styles/Views.xaml" />
                <ResourceDictionary Source="/Behaviours/Converters/Converters.xaml" />
                <ResourceDictionary Source="/Styles/Widgets/WeatherWidget.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
