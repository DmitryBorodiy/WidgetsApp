<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:c="clr-namespace:BetterWidgets.Controls"
    xmlns:converters="clr-namespace:BetterWidgets.Behaviours.Converters"
    xmlns:h="clr-namespace:BetterWidgets.Helpers"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml">

    <converters:BoolToVisibility x:Key="ErrorMessageBoolToVisibility" />

    <Style
        x:Key="DefaultErrorMessageToolbarButton"
        BasedOn="{StaticResource {x:Type ui:Button}}"
        TargetType="ui:Button">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="BorderBrush" Value="Transparent" />
        <Setter Property="Padding" Value="5" />
    </Style>

    <Style x:Key="DefaultErrorMessageStyle" TargetType="c:ErrorMessage">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="c:ErrorMessage">
                    <Grid Visibility="{TemplateBinding Converter={StaticResource ErrorMessageBoolToVisibility}, Property=IsOpen}">
                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <ui:InfoBar
                            Title="{TemplateBinding Title}"
                            Grid.RowSpan="2"
                            VerticalAlignment="Stretch"
                            IsClosable="False"
                            IsOpen="True"
                            Message="{TemplateBinding Message}"
                            Severity="{TemplateBinding Severity}"
                            Visibility="{TemplateBinding Visibility}" />

                        <ContentPresenter
                            Grid.Row="1"
                            Margin="0,30,20,13"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Bottom"
                            Content="{TemplateBinding Content}"
                            Visibility="{TemplateBinding Converter={StaticResource ErrorMessageBoolToVisibility},
                                                         Property=IsOpen}" />

                        <StackPanel
                            Margin="5"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Top"
                            h:MarginSetter.Margin="5, 0, 0, 0"
                            Orientation="Horizontal">
                            <ui:Button
                                x:Name="UICloseCommand"
                                VerticalAlignment="Center"
                                Style="{StaticResource DefaultErrorMessageToolbarButton}">
                                <ui:Button.Icon>
                                    <ui:SymbolIcon FontSize="16" Symbol="Dismiss20" />
                                </ui:Button.Icon>
                            </ui:Button>
                        </StackPanel>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>

        <Style.Triggers>
            <Trigger Property="IsOpen" Value="False">
                <Setter Property="Visibility" Value="Collapsed" />
            </Trigger>
        </Style.Triggers>
    </Style>

    <Style BasedOn="{StaticResource DefaultErrorMessageStyle}" TargetType="c:ErrorMessage" />

</ResourceDictionary>