<c:SettingCategory
    x:Class="BetterWidgets.Views.Settings.AboutCategory"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:c="clr-namespace:BetterWidgets.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:r="clr-namespace:BetterWidgets.Resources"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:vm="clr-namespace:BetterWidgets.ViewModel.SettingsViews"
    x:Name="Root"
    Title="{x:Static r:Resources.AboutLabel}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    d:Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    d:Title="About"
    BackCommand="{Binding BackCommand}"
    Foreground="{ui:ThemeResource TextFillColorPrimaryBrush}"
    Style="{StaticResource DefaultSettingCategory}"
    Subtitle="{x:Static r:Resources.AboutSubtitle}"
    mc:Ignorable="d">
    <c:SettingCategory.Icon>
        <ui:SymbolIcon Symbol="Info20" />
    </c:SettingCategory.Icon>
    <c:SettingCategory.DataContext>
        <vm:AboutViewModel />
    </c:SettingCategory.DataContext>

    <c:SettingCategory.Settings>
        <c:ExpanderSettingView
            Title="{x:Static r:Resources.AppName}"
            Id="app.about"
            IsExpanded="True"
            Subtitle="{x:Static r:Resources.AboutSubtitle}">
            <c:ExpanderSettingView.Icon>
                <ui:ImageIcon
                    Width="15"
                    Height="15"
                    Source="pack://application:,,,/Assets/StoreLogo.png" />
            </c:ExpanderSettingView.Icon>
            <c:ExpanderSettingView.Content>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <TextBlock
                        Grid.Row="0"
                        Grid.Column="0"
                        Padding="10,3,10,16"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Center"
                        Text="{x:Static r:Resources.AppVersionLabel}"
                        TextTrimming="CharacterEllipsis" />
                    <TextBlock
                        Grid.Row="0"
                        Grid.Column="1"
                        Padding="10,0,10,11"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Center"
                        Opacity="0.8"
                        Text="{Binding Version, Mode=OneWay}"
                        TextAlignment="Right"
                        TextTrimming="CharacterEllipsis" />

                    <Rectangle
                        Grid.Row="0"
                        Grid.ColumnSpan="2"
                        Margin="-10,0"
                        VerticalAlignment="Bottom"
                        Style="{StaticResource HorizontalExpanderDividerStyle}" />

                    <TextBlock
                        Grid.Row="1"
                        Grid.Column="0"
                        Padding="10,16,10,18"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Center"
                        Text="{x:Static r:Resources.AppBuildLabel}"
                        TextTrimming="CharacterEllipsis" />
                    <TextBlock
                        Grid.Row="1"
                        Grid.Column="1"
                        Margin="0,0,0,1"
                        Padding="10,0"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Center"
                        Opacity="0.8"
                        Text="{Binding Build, Mode=OneWay}"
                        TextAlignment="Right"
                        TextTrimming="CharacterEllipsis" />

                    <Rectangle
                        Grid.Row="1"
                        Grid.ColumnSpan="2"
                        Margin="-10,0"
                        VerticalAlignment="Bottom"
                        Style="{StaticResource HorizontalExpanderDividerStyle}" />

                    <TextBlock
                        Grid.Row="2"
                        Grid.Column="0"
                        Padding="10,16,10,18"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Center"
                        Text="{x:Static r:Resources.AppChanelLabel}"
                        TextTrimming="CharacterEllipsis" />
                    <TextBlock
                        Grid.Row="2"
                        Grid.Column="1"
                        Margin="0,0,0,2"
                        Padding="10,0"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Center"
                        Opacity="0.8"
                        Text="{Binding Chanel, Mode=OneWay}"
                        TextAlignment="Right"
                        TextTrimming="CharacterEllipsis" />

                    <Rectangle
                        Grid.Row="2"
                        Grid.ColumnSpan="2"
                        Margin="-10,0"
                        VerticalAlignment="Bottom"
                        Style="{StaticResource HorizontalExpanderDividerStyle}" />

                    <TextBlock
                        Grid.Row="3"
                        Grid.Column="0"
                        Padding="10,16,10,8"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Center"
                        Text="{x:Static r:Resources.AppDeveloperLabel}"
                        TextTrimming="CharacterEllipsis" />
                    <TextBlock
                        Grid.Row="3"
                        Grid.Column="1"
                        Margin="0,8,0,0"
                        Padding="10,0"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Center"
                        Opacity="0.8"
                        Text="{Binding Developer, Mode=OneWay}"
                        TextAlignment="Right"
                        TextTrimming="CharacterEllipsis" />
                </Grid>
            </c:ExpanderSettingView.Content>
        </c:ExpanderSettingView>
    </c:SettingCategory.Settings>

    <Grid x:Name="RootLayout" />
</c:SettingCategory>
