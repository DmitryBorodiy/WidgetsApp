<Page
    x:Class="BetterWidgets.Views.Dialogs.EmojiPicker"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:e="clr-namespace:Emoji.Wpf;assembly=Emoji.Wpf"
    xmlns:local="clr-namespace:BetterWidgets.Views.Dialogs"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:r="clr-namespace:BetterWidgets.Resources"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:vmc="clr-namespace:BetterWidgets.ViewModel.Components"
    x:Name="Root"
    Title="{x:Static r:Resources.PickIcon}"
    d:Background="{ui:ThemeResource ApplicationBackgroundBrush}"
    d:DesignHeight="350"
    d:DesignWidth="350"
    Loaded="OnLoaded"
    mc:Ignorable="d">
    <Page.Resources>
        <ResourceDictionary>
            <DataTemplate x:Key="EmojiGroupItemTemplate" DataType="vmc:EmojiGroupViewModel">
                <e:TextBlock
                    Margin="2"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    FontSize="18"
                    Text="{Binding Symbol, Mode=OneWay}"
                    ToolTipService.ToolTip="{Binding Title, Mode=OneWay}" />
            </DataTemplate>

            <DataTemplate x:Key="EmojiItemTemplate" DataType="vmc:EmojiViewModel">
                <ui:Card Padding="5">
                    <e:TextBlock
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        FontSize="20"
                        Text="{Binding Symbol, Mode=OneWay}"
                        ToolTipService.ToolTip="{Binding Name, Mode=OneWay}" />
                </ui:Card>
            </DataTemplate>

            <ItemsPanelTemplate x:Key="EmojiItemsPanel">
                <WrapPanel Orientation="Horizontal" />
            </ItemsPanelTemplate>

            <ItemsPanelTemplate x:Key="EmojiGroupsItemsPanel">
                <StackPanel Orientation="Horizontal" />
            </ItemsPanelTemplate>

            <Style BasedOn="{StaticResource {x:Type ui:AutoSuggestBox}}" TargetType="ui:AutoSuggestBox">
                <Setter Property="RenderTransform">
                    <Setter.Value>
                        <ScaleTransform ScaleX="1" ScaleY="1" />
                    </Setter.Value>
                </Setter>
            </Style>

        </ResourceDictionary>
    </Page.Resources>

    <Grid
        x:Name="RootLayout"
        MaxWidth="350"
        MaxHeight="350"
        d:Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <ui:ListView
            Grid.Row="0"
            ItemTemplate="{StaticResource EmojiGroupItemTemplate}"
            ItemsPanel="{StaticResource EmojiGroupsItemsPanel}"
            ItemsSource="{Binding ElementName=Root, Path=EmojiGroups}"
            ScrollViewer.HorizontalScrollBarVisibility="Hidden"
            ScrollViewer.VerticalScrollBarVisibility="Disabled"
            SelectedItem="{Binding ElementName=Root, Path=SelectedGroup, Mode=TwoWay}" />

        <ui:TextBox
            Name="UISearch"
            Grid.Row="1"
            Margin="-13,8"
            HorizontalAlignment="Stretch"
            PlaceholderText="{x:Static r:Resources.SearchEmoji}"
            TextChanged="OnSearch">
            <ui:TextBox.Icon>
                <ui:SymbolIcon Symbol="Search20" />
            </ui:TextBox.Icon>
        </ui:TextBox>

        <ui:ListView
            x:Name="UIEmojiItemsCollection"
            Grid.Row="2"
            MaxWidth="350"
            ItemTemplate="{StaticResource EmojiItemTemplate}"
            ItemsPanel="{StaticResource EmojiItemsPanel}"
            ItemsSource="{Binding Path=SelectedGroup.Emojis, Mode=OneWay, ElementName=Root}"
            ScrollViewer.HorizontalScrollBarVisibility="Disabled"
            SelectionChanged="OnEmojiPicked" />
    </Grid>
</Page>
