<Page
    x:Class="BetterWidgets.Views.Dialogs.TimeZonePicker"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    d:DesignHeight="250"
    d:DesignWidth="320"
    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    mc:Ignorable="d">
    <ui:ListView
        x:Name="TimezonesBoxUI"
        Grid.Row="1"
        MaxHeight="220"
        Margin="-10,-18,-10,-10"
        Padding="0"
        HorizontalAlignment="Stretch"
        ItemTemplate="{StaticResource TimezoneItemTemplate}"
        ItemsSource="{Binding TimeZones, Mode=OneWay}"
        ScrollViewer.HorizontalScrollBarVisibility="Disabled"
        SelectedItem="{Binding TimeZone, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
</Page>
