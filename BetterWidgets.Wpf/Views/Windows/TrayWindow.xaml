<ui:FluentWindow
    x:Class="BetterWidgets.Views.Windows.TrayWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:h="clr-namespace:BetterWidgets.Helpers"
    xmlns:local="clr-namespace:BetterWidgets.Views.Windows"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:r="clr-namespace:BetterWidgets.Resources"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:v="clr-namespace:BetterWidgets.Views.Settings"
    xmlns:vm="clr-namespace:BetterWidgets.ViewModel"
    x:Name="UIRoot"
    Width="250"
    Height="300"
    MinWidth="200"
    MinHeight="200"
    d:Background="{ui:ThemeResource ApplicationBackgroundBrush}"
    d:Foreground="{ui:ThemeResource TextFillColorPrimaryBrush}"
    d:WindowStyle="None"
    Activated="OnActivated"
    Closing="OnClosing"
    Deactivated="OnDeactivated"
    ExtendsContentIntoTitleBar="True"
    ResizeMode="NoResize"
    Topmost="True"
    WindowBackdropType="Acrylic"
    mc:Ignorable="d">

    <Grid x:Name="UIRootLayout" Background="{Binding SolidAltThemeBrush, Mode=OneWay}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <ui:TextBlock
            Grid.Row="0"
            Margin="15,11,13,6"
            FontWeight="SemiBold"
            Text="{x:Static r:Resources.WidgetsLabel}"
            TextTrimming="CharacterEllipsis" />

        <ui:ListView
            Grid.Row="1"
            Margin="3,-2,5,0"
            ItemTemplate="{StaticResource WidgetTrayViewItemTemplate}"
            ItemsSource="{Binding TrayWidgets, Mode=OneWay}"
            ScrollViewer.HorizontalScrollBarVisibility="Disabled"
            SelectedItem="{Binding SelectedWidgetItem, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
            Style="{StaticResource CompactListViewStyle}">
            <ui:ListView.ContextMenu>
                <ContextMenu>
                    <ui:MenuItem
                        Command="{Binding RefreshTrayWidgetsListCommand}"
                        Header="{x:Static r:Resources.ShowInTray}"
                        IsCheckable="True"
                        IsChecked="{Binding SelectedWidgetItem.IsShowInTray, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                        <ui:MenuItem.Icon>
                            <ui:SymbolIcon Symbol="Eye20" />
                        </ui:MenuItem.Icon>
                    </ui:MenuItem>
                </ContextMenu>
            </ui:ListView.ContextMenu>
        </ui:ListView>

        <ui:Card
            Grid.Row="2"
            Height="45"
            Margin="-2,0,-2,0"
            Padding="9,0"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <StackPanel
                    x:Name="UIMainCommand"
                    Grid.Column="0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Orientation="Horizontal">
                    <ui:Button
                        Width="32"
                        Height="32"
                        Command="{Binding ActivateMainWindowCommand}"
                        Style="{StaticResource FlatButton}"
                        ToolTipService.ToolTip="{x:Static r:Resources.ShowAllList}">
                        <ui:TextBlock
                            Margin="0,3,0,0"
                            FontFamily="{StaticResource FluentIconsRegular}"
                            FontSize="17"
                            Text="" />
                    </ui:Button>
                </StackPanel>

                <StackPanel
                    Grid.Column="2"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    h:MarginSetter.LastItemMargin="0"
                    h:MarginSetter.Margin="0, 0, 5, 0"
                    Orientation="Horizontal">
                    <ui:Button
                        Width="32"
                        Height="32"
                        Command="{Binding RateReviewCommand}"
                        Style="{StaticResource FlatButton}"
                        ToolTipService.ToolTip="{x:Static r:Resources.LeaveFeedback}">
                        <ui:SymbolIcon FontSize="17" Symbol="PersonFeedback20" />
                    </ui:Button>
                    <ui:Button
                        Width="32"
                        Height="32"
                        Command="{Binding NavigateCommand}"
                        CommandParameter="{x:Type v:SettingsView}"
                        Style="{StaticResource FlatButton}"
                        ToolTipService.ToolTip="{x:Static r:Resources.SettingsLabel}">
                        <ui:SymbolIcon FontSize="16" Symbol="Settings20" />
                    </ui:Button>
                </StackPanel>
            </Grid>
        </ui:Card>

    </Grid>

</ui:FluentWindow>
