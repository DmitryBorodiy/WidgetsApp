<UserControl
    x:Class="BetterWidgets.Controls.MarqueeTextBlock"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:BetterWidgets.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="Root"
    d:DesignHeight="16"
    d:DesignWidth="120"
    ClipToBounds="True"
    mc:Ignorable="d">

    <Grid x:Name="RootLayout">
        <Canvas
            x:Name="UICanvas"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            ClipToBounds="True">
            <TextBlock
                x:Name="UIText"
                VerticalAlignment="Center"
                FontSize="{Binding FontSize, ElementName=Root, Mode=OneWay}"
                Foreground="{Binding Foreground, ElementName=Root, Mode=OneWay}"
                Text="{Binding Text, ElementName=Root, Mode=OneWay}">
                <TextBlock.RenderTransform>
                    <TranslateTransform x:Name="UITransform" />
                </TextBlock.RenderTransform>
            </TextBlock>
        </Canvas>
    </Grid>

</UserControl>
