<UserControl
    x:Class="BetterWidgets.Controls.SettingCard"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Name="Root"
    d:DesignHeight="70"
    d:DesignWidth="350"
    ScrollViewer.CanContentScroll="False"
    ScrollViewer.HorizontalScrollBarVisibility="Disabled"
    ScrollViewer.VerticalScrollBarVisibility="Disabled"
    mc:Ignorable="d">

    <Button
        x:Name="RootLayout"
        Padding="15,10"
        HorizontalAlignment="Stretch"
        VerticalAlignment="Stretch"
        HorizontalContentAlignment="Stretch"
        Click="RootLayout_Click"
        Command="{Binding Path=Command, ElementName=Root}"
        CommandParameter="{Binding Path=CommandParameter, ElementName=Root}"
        ScrollViewer.CanContentScroll="False"
        ScrollViewer.HorizontalScrollBarVisibility="Disabled"
        ScrollViewer.VerticalScrollBarVisibility="Disabled">
        <Grid ScrollViewer.CanContentScroll="False">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <ContentControl
                Width="26"
                Height="26"
                Content="{Binding Icon}"
                Foreground="{DynamicResource AccentButtonBackground}"
                RenderTransformOrigin="0.5,0.5">
                <ContentControl.RenderTransform>
                    <ScaleTransform ScaleX="1.8" ScaleY="1.8" />
                </ContentControl.RenderTransform>
                <d:ContentControl.Content>
                    <ui:SymbolIcon Symbol="Settings20" />
                </d:ContentControl.Content>
            </ContentControl>
            <StackPanel
                Grid.Column="1"
                Margin="15,0"
                HorizontalAlignment="Stretch">
                <TextBlock
                    HorizontalAlignment="Stretch"
                    d:Text="Header"
                    Text="{Binding Path=Header, ElementName=Root}"
                    TextWrapping="Wrap" />
                <TextBlock
                    Margin="0,2,0,0"
                    HorizontalAlignment="Stretch"
                    d:Text="Some description is here"
                    FontSize="12"
                    Opacity="0.8"
                    Text="{Binding Path=Description, ElementName=Root}"
                    TextWrapping="Wrap" />
            </StackPanel>
            <ContentControl
                Grid.Column="2"
                Width="20"
                Height="20"
                Content="{Binding Path=QueryIcon, ElementName=Root}"
                RenderTransformOrigin="0.5,0.5">
                <ContentControl.RenderTransform>
                    <ScaleTransform ScaleX="1.1" ScaleY="1.1" />
                </ContentControl.RenderTransform>
                <d:ContentControl.Content>
                    <ui:SymbolIcon Symbol="ChevronRight20" />
                </d:ContentControl.Content>
            </ContentControl>
        </Grid>
    </Button>

</UserControl>
